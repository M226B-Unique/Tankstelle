<Page x:Class="Tankstellen_Applikation.Pages.ShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tankstellen_Applikation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShopPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>
            <Label Content="+" FontSize="30"></Label>
            <Button Grid.Row="1" Margin="5" Height="40" Content="S" FontSize="20" Name="btn_buySnickers" Click="btn_buySnickers_Click"></Button>
            <Button Grid.Row="2" Grid.Column="1" Margin="5" Height="40" Content="B" FontSize="20" Name="btn_buyBounty" Click="btn_buyBounty_Click"></Button>
            <Button Grid.Row="3" Grid.Column="3" Margin="5" Height="40" Content="M" FontSize="20" Name="btn_buyMars" Click="btn_buyMars_Click"></Button>
        </Grid>
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Receipt" Grid.Column="1" FontSize="30"></Label>
            <ListView Grid.Row="1" Name="lv_Receipt" ItemsSource="{Binding Path=ProductDisplayList, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition  Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Label Content="{Binding}" Grid.Column="0"></Label>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label FontSize="18" HorizontalContentAlignment="Right" Content="{Binding ProductDisplayPrice}"></Label>
            
            <Button Grid.Row="2" Grid.ColumnSpan="2" Height="75" Margin="5" Content="Pay" FontSize="40" Name="btn_pay" Click="btn_pay_Click"></Button>
        </Grid>
        

        
        
    </Grid>
</Page>
